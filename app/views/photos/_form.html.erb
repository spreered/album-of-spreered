<div class="photo-form">
<%=form_for @photo,:html => {:class =>'form'} do |f|%>
  <div class="form-group">
  <%= f.label :title ,"Title"%>
   <%= f.text_field :title ,class:"form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :date ,"Date"%>
    <div class="input-group date" id="photo_date_pick">
   <%= f.text_field :date, class:"form-control" %>
   <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
        $('#photo_date_pick').datetimepicker({
            format: 'YYYY-MM-DD'
        });
    });
  </script>

  <div class="form-group">
  <%= f.label :description ,"Description"%>
   <%= f.text_field :description, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :file_location ,"File Location"%>
    <div class="file-upload-group form-inline">
      <input id="uploadFile" class="form-control" placeholder="Choose File" disabled="disabled" />
      <div class="file-upload btn btn-default">
        <span>Upload</span>
        <%= f.file_field :file_location%>
      </div>
        <script type="text/javascript">
        document.getElementById("photo_file_location").onchange = function () {
        document.getElementById("uploadFile").value = this.value;
        };
      </script>
    </div>
  </div>
  <%= f.submit "OK", class:"btn btn-primary" %>
<% end %>


<% if @photo.errors.present? %>
  <div class="input-error">
    <div class="input-error-icon"><%=fa_icon("exclamation-triangle")%></div>
    <div class="input-error-msg">
      <ul>
      <% @photo.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize} : #{message}" %></li>
      <%end%>
      </ul>
    </div>
  </div>
<%end%>

</div>

